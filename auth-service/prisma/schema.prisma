generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["auth"]
}

enum Gender {
  MALE
  FEMALE
  NULL

  @@schema("auth")
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  phoneNumber String  
  gender      Gender  @default(NULL)
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@schema("auth")
}
